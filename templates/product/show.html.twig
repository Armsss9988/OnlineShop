{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ product.Name }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ product.Category }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.Price }}VND</td>
            </tr>
            <tr>
                <img class="border img-fluid w-50" src="{{ asset('/images/product/' ~  product.Image) }}" alt="">
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
    <form action="{{ path('app_add_cart', {'id': product.id}) }}">
        <input name="quantity">Quantity</input>
        <button class="btn btn-primary">Add to cart</button>
    </form>
{% endblock %}
